<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mixture" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/status</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/primary_font</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="buttonStyle">@style/AppButtonStyle</item>
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="materialAlertDialogTheme">@style/AppAlertTheme</item>
    </style>

    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="menu">@menu/info_menu</item>
        <item name="title">@string/app_name</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Material Alert Theming -->
    <style name="AppAlertTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/secondary_dark</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AppAlertBodyTextStyle</item>
        <item name="alertDialogStyle">@style/AppAlertStyle</item>
        <item name="shapeAppearance">@style/AppAlertShape</item>
    </style>

    <style name="AppAlertBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/primary_font</item>
    </style>

    <style name="AppAlertStyle" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/AppAlertShape</item>
    </style>

    <style name="AppAlertShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_radius</item>
    </style>
</resources>